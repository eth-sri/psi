
dat Foo{
    x: ℝ;
    def Foo(x){
        this.x=x;
    }
    def foo(){
        return x;
    }
}

def main(){
    k := 1338;
    k += flip(1/2);
    def foo(){
        return k;
    }
    x := foo; // captured by value
    y := Foo(1337);
    y.x += flip(1/2);
    z := y.foo; // captured by value
    k = 0;
    y.x = 0; // hence these assignments are not visible
    return (x(),z()); // expected: (1/2·δ(1337)[r₂]+1/2·δ(1338)[r₂])·(1/2·δ(1338)[r₁]+1/2·δ(1339)[r₁])
}


