def informationFlow[a,b](input: Distribution[a], channel: a→ b,eqa: a×a→ℝ,eqb: b×b→ℝ)⇒
I(infer((){
	i := sample(input);
	o := channel(i);
	return (i,o);
}),eqa,eqb);

