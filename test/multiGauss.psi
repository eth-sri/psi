	return sampleFrom("(r;a,b)=>Î´(âˆ‘_i[0â‰¤i]Â·[i<a.length] a@[i]Â·b@[i])[r]",a,b); // performance hack
}

def cholesky(A: â„[][])pure{ // cholesky decomposition
	assert(sampleFrom("(r;A)=>Î´([âˆ‘_i[0â‰¤i]Â·[i<A.length]âˆ‘_j[0â‰¤j]Â·[j<A.length]Â·[A@[i]@[j]â‰ A@[j]@[i]]=0])[r]",A):ğ”¹);
	L := array(A.length,array(A.length,0:â„));
	for i in [0..n){
		if i < A.length {
			for j in [0..i+1){
				if j < A.length{
					t := dot(L[i][0..j],L[j][0..j]);
					if i == j {
						assert(A[i][j]>=t);
						L[i][j] = (A[i][j]-t)^(1/2)
					}else if L[j][j]!=0{
						L[i][j] = (A[i][j]-t)/L[j][j];
					}
				}
			}
		}
	}
	return L;
}
